environment:
  dependencies:
    python3: Pipfile
    native:
      - recipe: docker
        version: 1.5-1build1
actions:
  - name: lint
    script: 'pipenv run black . ; pipenv run pylint envy'
    help: 'lint the project'
  - name: pylint
    script: 'cd envy ; pylint envy'
    help: 'run pylint alone'
  - name: black
    script: 'black .'
    help: 'run black alone'
