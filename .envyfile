environment:
  base:
    image: python:3.7.3-slim-stretch
  system-packages:
    - recipe: docker
      version: 1.5-1build1
    - recipe: git
  setup-steps:
    - name: pipenv
      type: script
      run:
        - "pip3 install pipenv"
    - name: python-deps
      type: script
      run:
        - "pipenv install -d"
      triggers:
        files:
          - Pipfile
          - Pipfile.lock
        steps:
          - pipenv
actions:
  - name: lint
    script: 'pipenv run black . ; pipenv run pylint envy'
    help: 'lint the project'
  - name: pylint
    script: 'pipenv run pylint envy'
    help: 'run pylint alone'
  - name: black
    script: 'pipenv run black .'
    help: 'run black alone'
