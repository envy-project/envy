environment:
  dependencies:
    python3: Pipfile
    node: package.json
    ruby: Gemfile
    native:
      - recipe: imagemagick
        version: 4
      - recipe: curl
        version: 0.1.1
      - recipe: vim
        version: 1.2
actions:
  - name: lint
    script: 'cd src ; pylint src ; pipenv run black .'
    help: 'lint the project'
  - name: pylint
    script: 'pylint src'
    help: 'run pylint alone'
  - name: black
    script: 'black .'
    help: 'run black alone'

