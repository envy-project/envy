environment:
  dependencies:
    python3: Pipfile
actions:
  - name: lint
    script: 'cd envy ; pipenv run black . ; pylint envy'
    help: 'lint the project'
  - name: pylint
    script: 'cd envy ; pylint envy'
    help: 'run pylint alone'
  - name: black
    script: 'black .'
    help: 'run black alone'

