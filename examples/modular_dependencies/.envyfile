environment:
  system-packages:
    - recipe: docker
      version: 1.5-1build1
    - recipe: python3.7
      version: 3.7.3
  setup-steps:
    - name: pipenv
      type: script
      run:
        - "pip3 install pipenv"
      triggers:
        system-packages:
          - python3.7
    - name: python-deps
      type: script
      run:
        - "pipenv install -d"
      triggers:
        files:
          - Pipfile
          - Pipfile.lock
        steps:
          - pipenv
    - name: other-executables
      type: remote
      url: https://magmastone.net/some_file.sh
